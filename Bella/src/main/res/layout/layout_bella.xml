<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bellaContent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:clipChildren="false"
    android:clipToPadding="false">

    <androidx.cardview.widget.CardView
        android:id="@+id/bellaCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        tools:cardBackgroundColor="@android:color/white"
        android:elevation="@dimen/cardview_default_elevation"
        >

        <RelativeLayout
            android:id="@+id/bellaDetail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/bellaText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/bella_content_text_margin"
                android:layout_marginStart="@dimen/bella_content_default_padding"
                android:layout_toStartOf="@+id/bellaButton"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@android:color/black"
                tools:text="@tools:sample/lorem" />

            <Button
                android:id="@+id/bellaButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:textColor="?colorAccent"
                tools:text="@tools:sample/lorem" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
